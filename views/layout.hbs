<!doctype html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="en"> <!--<![endif]-->
<head>
	
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>Umbra Engineering</title>
	
	{{#if _development }}
	{{#each _stylesheets }}
	<link rel="stylesheet" type="text/css" href="{{ this }}" />
	{{/each}}
	{{else}}
	<link rel="stylesheet" type="text/css" href="/style.min.css" />
	{{/if}}
	
	<!--[if lt IE 9]>
		<link rel="stylesheet" type="text/css" href="/stylesheets/ie.css">
	<![endif]-->
	
	<script type="text/javascript" src="/javascripts/prefixfree.min.js"></script>
	
</head>
<body>
	
	<div class="container" id="wrapper">
		
		<div id="header-wrapper">
			<div id="header">
				<div class="row">
					<div class="five columns">
						<h1><a href="/">Umbra Engineering</a></h1>
					</div>
					<div class="seven columns" id="nav">
						<ul class="top-level">
							<li><a href="/services">Services</a></li>
							<li><a href="/contact">Contact Us</a></li>
							<li><a href="/portfolio">Portfolio</a></li>
							<li><a href="/open-source">Open Source</a></li>
						</ul>
					</div>
				</div>
				<div class="row">
					<h2 class="big-heading">
						Professional Node.js<br />
						application development
					</h2>
				</div>
			</div>
		</div>
		
		<div class="row" id="content">
			{{{ body }}}
		</div>
		
		<div id="footer">
			<div id="footer-inner">
				<div class="row">
					<p>
						Copyright &copy; {{now "yyyy" }} Umbra Engineering LLC<br />
						Powered by <a href="http://nodejs.org">Node.js</a> and <a href="http://expressjs.com">Express</a>.
						Hosted on <a href="http://heroku.com">Heroku</a>.
					</p>
				</div>
			</div>
		</div>
	
	</div>
	
	{{#if _development}}
	<script type="text/javascript" src="/javascripts/yepnope.js"></script>
	<script type="text/javascript" src="/javascripts/main.js"></script>
	{{else}}
	<script type="text/javascript" src="/app.min.js"></script>
	{{/if}}
	
</body>
</html>
