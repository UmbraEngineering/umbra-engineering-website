<head>

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>Umbra Engineering</title>

	{{#if env.isProduction}}
	{{! <link rel="stylesheet" type="text/css" href="/stylesheets/styles.min.css" /> }}
	{{else}}
	{{! <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" /> }}
	{{/if}}
	<link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" />
	
	<script type="text/javascript" src="/javascripts/lib/prefixfree.min.js"></script>
	
</head>
<body>

	<div id="messages"></div>
	
	<div id="wrapper">
		
		<div id="header-wrapper">
			<div id="header">
				<div class="row">
					<div class="five columns">
						<h1><a href="/">Umbra Engineering</a></h1>
					</div>
					<div class="seven columns" id="nav">
						<ul class="top-level">
							<li><a href="/open-source">Open Source</a></li>
							<li><a href="/careers">Careers</a></li>
							<li><a href="/contact">Contact</a></li>
						</ul>
					</div>
				</div>
				<div class="row">
					<h2 class="big-heading">
						Professional Node.js<br />
						application development
					</h2>
				</div>
			</div>
		</div>
		
		<div id="content-wrapper">
			<div id="content"></div>
		</div>
		
		<div id="footer">
			<div id="footer-inner">
				<div class="row">
					<p>
						Copyright &copy; {{now "yyyy" }} Umbra Engineering LLC<br />
						Powered by <a href="http://nodejs.org" rel="external">Node.js</a> and <a href="http://expressjs.com" rel="external">Express</a>.
						Hosted on <a href="http://heroku.com" rel="external">Heroku</a>.
					</p>
				</div>
			</div>
		</div>
	
	</div>

	<script type="text/javascript">
		{{! Output any variables that we need to send to the client }}
		{{#if errors}}
		var _errors = {{{json errors }}};
		{{/if}}
		{{#if messages}}
		var _messages = {{{json messages }}};
		{{/if}}
		{{#if prefill}}
		var _prefill = {{{json prefill }}};
		{{/if}}
	</script>

	{{#if env.isProduction}}
	<script type="text/javascript" src="/javascripts/app.min.js"></script>
	{{else}}
	<script type="text/javascript" src="/javascripts/app.js"></script>
	{{/if}}
	
</body>
</html>
