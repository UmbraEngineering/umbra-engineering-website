<head>
	
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>Umbra Engineering</title>
	
	{{#each _stylesheets }}
	<link rel="stylesheet" type="text/css" href="{{ this }}" />
	{{/each}}
	
	<!--[if lt IE 9]>
		<link rel="stylesheet" type="text/css" href="public/css/ie.css">
	<![endif]-->
	
	<script type="text/javascript" src="javascripts/prefixfree.min.js"></script>
	
</head>
<body>
	
	<div class="container" id="wrapper">
		
		<div class="row" id="header">
			<div class="twelve columns">
				<h1><a href="/"><span class="umbra">Umbra</span> Engineering</a></h1>
				{{> navigation }}
			</div>
		</div>
		
		<div class="row" id="content">
			{{{ body }}}
		</div>
		
		<div class="row" id="footer">
			<p>
				Copyright &copy; {{now "yyyy" }} Umbra Engineering LLC
			</p>
		</div>
	
	</div>
	
	{{#each _javascripts }}
	<script type="text/javascript" src="{{ this }}"></script>
	{{/each}}
	
</body>
</html>
